# Placeholders batch.*
#    for Oracle:
####################数据库#####################
#驱动类
batch.jdbc.driverClassName=oracle.jdbc.OracleDriver
#URL
batch.jdbc.url=jdbc:oracle:thin:@192.168.12.216:1522:ORCL
#用户名
batch.jdbc.username=userp
#密码
batch.jdbc.password=userp
####################连接池#####################
#初始化连接数
batch.jdbc.initialSize=10
#最大活动数
batch.jdbc.maxActive=50
#最大闲置的连接数
batch.jdbc.maxIdle=10
#最小闲置的连接数
batch.jdbc.minIdle=5
#超时等待时间(ms)
batch.jdbc.maxWait=10000
#是否自动回收超时连接
batch.jdbc.removeAbandoned=true
#设置被遗弃的连接的超时的时间(s)，即当一个连接被遗弃的时间超过设置的时间，则它会自动转换成可利用的连接。默 认的超时时间是300s。
batch.jdbc.removeAbandonedTimeout=60
#是否在自动回收超时连接的时候打印连接的超时错误
batch.jdbc.logAbandoned=true
#给出一条简单的sql语句进行验证
batch.jdbc.validationQuery=select 1 from dual
#在取出连接时进行有效验证
batch.jdbc.testOnBorrow=true
#create操作的隔离级别(create*方法的隔离级别会被单独指定，为了确保任务启动时，如果两个操作尝试在同时启动相同的任务，那么只有一个任务能够被成功启动)
batch.create.isolationlevel=ISOLATION_SERIALIZABLE

